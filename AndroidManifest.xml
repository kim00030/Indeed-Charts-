<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilhyungkim.indeedcharts"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ilhyungkim.indeedcharts.MyChartsListActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.ilhyungkim.indeedcharts.PieChartActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ilhyungkim.indeedcharts.LineChartActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.ilhyungkim.indeedcharts.BarChartActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.ilhyungkim.indeedcharts.StackedBarChartActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.ilhyungkim.indeedcharts.DialChartActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ilhyungkim.indeedcharts.ScatterChartActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
    </application>

</manifest>